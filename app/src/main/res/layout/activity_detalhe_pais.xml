            android:lines="1"
            android:paddingLeft="@dimen/padding_value_left"
            android:id="@+id/txt_populacao"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
